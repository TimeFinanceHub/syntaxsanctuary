{
    "name": "timefinancehub/syntaxsanctuary",
    "description": "Una herramienta para generar programáticamente elementos HTML y estructuras de páginas web complejas con PHP.",
    "keywords": ["php", "html", "generator", "project", "ramiro"],
    "type": "project",
    "license": "MIT",

    "authors": [
        {
            "name": "Ramiro G Glez",
            "email": "mostlyphpsoftware@gmail.com",
            "homepage": "https://tu-pagina-web.com",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=8.1"
    },

    "autoload": {
        "psr-4": {
            "Rmo\\Syntaxsanctuary\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Rmo\\Syntaxsanctuary\\Tests\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vlucas/phpdotenv": "^5.0"
    },

    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
